{
  "name": "app",
  "version": "3.1.0",
  "description": "[![build status](https://gitlab.com/singuerinc/www.singuerinc.com/badges/master/build.svg)](https://gitlab.com/singuerinc/www.singuerinc.com/commits/master)",
  "main": "index.js",
  "scripts": {
    "build:css": "cssnano ./all.css ./public/all.css --discardComments.removeAll",
    "build:js": "webpack --progress",
    "build": "jekyll build -d ./public",
    "test": "nyc ava --serial --verbose",
    "report": "nyc report",
    "report-lcov": "nyc report --reporter=text-lcov > coverage.lcov",
    "lint": "eslint . --color --cache --c ./.eslintrc.js"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/singuerinc-works/com.singuerinc.www.git"
  },
  "author": "singuerinc",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/singuerinc-works/com.singuerinc.www/issues"
  },
  "homepage": "https://gitlab.com/singuerinc-works/com.singuerinc.www#README",
  "dependencies": {
    "animejs": "1.1.1",
    "nprogress": "^0.2.0"
  },
  "devDependencies": {
    "ava": "^0.18.1",
    "babel-core": "6.11.4",
    "babel-loader": "^6.3.2",
    "babel-preset-es2015": "6.9.0",
    "browser-env": "^2.0.21",
    "chai": "^3.5.0",
    "css-loader": "^0.26.2",
    "cssnano-cli": "1.0.4",
    "eslint": "^3.15.0",
    "eslint-config-airbnb": "^14.1.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "file-loader": "^0.10.1",
    "nyc": "^10.1.2",
    "sinon": "^1.17.7",
    "style-loader": "^0.13.2",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-4",
      "react"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "ignore": "./__tests__",
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "ava": {
    "require": [
      "babel-register",
      "./__tests__/unit/helpers/setup-browser-env.js"
    ],
    "babel": "inherit",
    "files": [
      "__tests__/unit/*.test.js"
    ],
    "source": [
      "**/*.{js}",
      "!public/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": true,
    "powerAssert": false
  },
  "nyc": {
    "lines": 95,
    "statements": 95,
    "functions": 95,
    "branches": 95,
    "reporter": [
      "html",
      "text-summary"
    ],
    "cache": true,
    "all": false,
    "check-coverage": true
  }
}
