{
  "name": "app",
  "version": "3.1.0",
  "description": "[![build status](https://gitlab.com/singuerinc/www.singuerinc.com/badges/master/build.svg)](https://gitlab.com/singuerinc/www.singuerinc.com/commits/master)",
  "main": "index.js",
  "scripts": {
    "build:css": "cssnano ./all.css ./public/all.css --discardComments.removeAll",
    "build:js": "webpack --watch --env=dev --progress --profile --colors",
    "build:js:prod": "webpack --env=prod --progress --profile --colors",
    "build:tests": "tsc -p ./__tests__/tsconfig.json",
    "build": "jekyll build -d ./public",
    "test": "yarn run build:tests && nyc ava --serial --verbose",
    "report": "nyc report",
    "report-lcov": "nyc report --reporter=text-lcov > coverage.lcov",
    "lint": "tslint -p ./tslint.json"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@gitlab.com/singuerinc-works/com.singuerinc.www.git"
  },
  "author": "singuerinc",
  "license": "ISC",
  "bugs": {
    "url": "https://gitlab.com/singuerinc-works/com.singuerinc.www/issues"
  },
  "homepage": "https://gitlab.com/singuerinc-works/com.singuerinc.www#README",
  "dependencies": {
    "animejs": "^2.0.2",
    "nprogress": "^0.2.0",
    "turbolinks": "^5.0.3"
  },
  "devDependencies": {
    "@types/nprogress": "^0.0.29",
    "ava": "^0.21.0",
    "awesome-typescript-loader": "^3.2.1",
    "babel-core": "6.11.4",
    "babel-loader": "^6.3.2",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "6.9.0",
    "browser-env": "^2.0.21",
    "chai": "^3.5.0",
    "css-loader": "^0.26.2",
    "cssnano-cli": "1.0.4",
    "file-loader": "^0.10.1",
    "nyc": "^10.1.2",
    "sinon": "^2.3.8",
    "style-loader": "^0.13.2",
    "tslint": "^5.5.0",
    "typescript": "^2.4.2",
    "url-loader": "^0.5.8",
    "webpack": "^2.2.1"
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-4"
    ],
    "plugins": [
      "transform-runtime"
    ],
    "ignore": "./__tests__",
    "env": {
      "development": {
        "sourceMaps": "inline"
      }
    }
  },
  "ava": {
    "require": [
      "babel-register",
      "./__tests__/unit/helpers/setup-browser-env.js"
    ],
    "babel": "inherit",
    "files": [
      "__tests__/unit/*.test.js"
    ],
    "source": [
      "**/*.{js}",
      "!public/**/*"
    ],
    "concurrency": 5,
    "failFast": true,
    "tap": false,
    "powerAssert": true
  },
  "nyc": {
    "lines": 90,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "reporter": [
      "html",
      "text-summary"
    ],
    "cache": true,
    "all": false,
    "check-coverage": true
  }
}
